---
import { db, Posts } from "astro:db";
import { Icon } from "astro-iconify";
import Layout from "../../../layouts/Layout.astro";
import Header from "../../../components/Header.astro";

if (!Astro.locals.auth().userId) {
  return Astro.redirect("/login");
}

const user = await Astro.locals.currentUser();
const allPosts = await db.select().from(Posts).orderBy(Posts.pubDate);
---

<Layout title="Dashboard">
  <div class="p-6 container mx-auto">
    <Header activeTab="posts" />

    <main class="py-12 flex flex-col gap-6">
      <section class="w-full m-0">
        <ul class="m-0 list-none p-6 rounded-2xl bg-white w-full shadow flex flex-col gap-2">
          <li class="">
            <button class="btn btn-md w-full btn-primary text-white"> 
                <Icon pack="lucide" name="feather" height={24} width={24} class="shrink-0" />
                Write New Post 
            </button>
          </li>
          {
            allPosts.map((post) => (
              <li class="grid grid-cols-[64px_1fr] items-start gap-3">
                <p class="m-0 text-slate-500">
                  {new Date(post.pubDate).toLocaleDateString("en-US", { month: "short", day: "numeric" })}
                </p>
                <a class="m-0 text-slate-700 font-medium text-cyan-700 link">{post.title}</a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
  </div>
</Layout>
