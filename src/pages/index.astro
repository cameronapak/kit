---
import { SignInButton } from "@clerk/astro/components";
import Logo from "../components/Logo.astro";
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";

if (Astro.locals.auth().userId) {
  return Astro.redirect("/dashboard");
}
---

<Layout
  title="faith.tools kit"
  description="Helping Christian creatives keep in touch with their community and helping Christians discover what's new in the faith and tech space."
>
  <main class="relative overflow-hidden not-prose">
    <div class="container flex flex-col gap-12 py-12 justify-center items-center min-h-screen h-full mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col gap-4 items-center">
        <Logo showAnimatedLogo={true} />
        <p class="max-w-sm text-center text-balance">
          kit makes it easier to keep in touch with what's new in faith & tech.
        </p>
        <div class="flex items-center gap-3">
          <SignInButton mode="modal" asChild>
            <button class="btn btn-primary">Sign in</button>
          </SignInButton>
          <a class="btn btn-outline border-2 border-slate-200 hover:border-slate-300 bg-transparent text-slate-800 hover:bg-transparent hover:text-slate-900" href="/app/kit">See a demo</a>
        </div>
      </div>
      <Footer />
    </div>
  </main>
</Layout>
